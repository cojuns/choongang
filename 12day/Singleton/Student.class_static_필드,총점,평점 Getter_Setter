//	public int getMmax() {
//		return mmax;
//	}
//	public void setMmax(int mmax, int math, String mMaxName) {
//		this.mmax = mmax;
//	    this.math = math;
//	    this.mMaxName = mMaxName;
//	}
//	public int getEmax() {
//		return emax;
//	}
//	public void setEmax(int emax, int eng, String eMaxName) {
//		this.emax = emax;
//	    this.eng = eng;
//	    this.eMaxName = eMaxName;
//	}
	
	
	
}
