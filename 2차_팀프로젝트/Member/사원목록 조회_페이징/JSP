<body>
    <h2>사원 목록</h2>
    <table border="1">
        <thead>
            <tr>
                <th>사번</th>
                <th>이름</th>
                <th>핸드폰</th>
                <th>입사일</th>
                <th>직급</th>
                <th>부서명</th>
                <th>부서 위치</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach items="${members}" var="member">
                <tr>
                    <td>${member.mno}</td>
                    <td>${member.name}</td>
                    <td>${member.phone}</td>
                    <td>${member.hiredate}</td>
                    <td>${member.job}</td>
                    <td>${member.dname}</td>
                    <td>${member.loc}</td>
                </tr>
            </c:forEach>
            
        </tbody>
    </table>
    <!-- 페이지 번호 표시 부분 -->
<div class = "page-box">
    <c:if test="${totalPages > 1}">
        <ul class="pagination">
            <li class="<c:if test="${page == 1}">disabled</c:if>">
                <a href="?page=${page - 1}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <c:forEach begin="1" end="${totalPages}" var="pageNumber">
                <li class="<c:if test="${page == pageNumber}">active</c:if>">
                    <a href="?page=${pageNumber}">${pageNumber}</a>
                </li>
            </c:forEach>
            <li class="<c:if test="${page == totalPages}">disabled</c:if>">
                <a href="?page=${page + 1}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </c:if>
</div>

<form action="/your-search-endpoint" method="GET">
    <input type="text" name="searchName" placeholder="사번 검색">
    <button type="submit">검색</button>
</form>

    
